{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for the Speech-to-Text Microservice",
  "main": "src/app.ts",
  "scripts": {
    "start": "node dist/app.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "dev:mock-whisper": "USE_MOCK_WHISPER=true ts-node-dev --respawn --transpile-only src/app.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write '**/*.ts'",
    "worker": "ts-node workers/transcription.worker.ts"
  },
  "dependencies": {
    "@queuedash/api": "^3.8.0",
    "axios": "^1.7.2",
    "better-sqlite3": "^12.4.1",
    "bullmq": "^5.61.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "form-data": "^4.0.4",
    "ioredis": "^5.8.2",
    "multer": "1.4.5-lts.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.46.2"
  }
}
